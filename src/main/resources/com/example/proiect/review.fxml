<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" style="-fx-background-color: #071b24;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proiect.AddReview">
   <children>
      <Label fx:id="label_title" text="Eternal Sunshine of the Spotless Mind" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
         </font>
      </Label>
      <CheckBox fx:id="cb_spoilers" mnemonicParsing="false" text="Review contains spoilers?" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </CheckBox>
      <TextArea fx:id="textArea" prefWidth="464.0" promptText="Share your thoughts..." style="-fx-background-color: #071b24;" wrapText="true" />
      <HBox>
         <children>
            <Button fx:id="button_cancel" mnemonicParsing="false" style="-fx-background-color: #2f5830;" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="button_save" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: #2f5830;" text="Save" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
